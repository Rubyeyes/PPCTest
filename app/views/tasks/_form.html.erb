<P><%= render "validation_errors", object:  @task%><P>

<%= smart_form(@task, params[:controller]) do |f| %>

	<% if action_name == "new"%>
		<% if @project.present? %>
			<%= f.hidden_field :project_id, :value => @project.id %>
		<% else %>
			<div class="row row-form">
				<div class="col-sm-2">
					<%= f.label :project_id, "Project Name", class: "control-label" %>
				</div>
				<div class="col-sm-10">
					<%= f.select :project_id, Project.where(user_id: current_user.id).collect {|t| [t.project_name, t.id]}, {prompt: "Select Project"}, class: "form-control" %>
				</div>
			</div>
		<% end %>
	<% end %>

	<div class="row row-form">
		<div class="col-sm-2">
			<%= f.label :executor, class: "control-label" %>
		</div>
		<div class="col-sm-10">
			<%= f.select :executor_id, User.all.order(fullname: :asc).collect {|t| [t.fullname, t.id]}, {prompt: "Select executor"}, class: "form-control" %>
		</div>
	</div>
	<div class="row row-form">
		<div class="col-sm-2">
			<%= f.label :task, class: "control-label" %>
		</div>
		<div class="col-sm-10">
			<%= f.text_area :task, class: "form-control"%>
		</div>
	</div>
	<div class="row row-form">
		<div class="col-sm-2">
			<%= f.label :deadline, class: "control-label" %>
		</div>
		<div class="col-sm-10">
			<%= f.date_select :deadline, class: "form-control"%>
		</div>
	</div>

	<div class="row row-form">
		<div class="col-sm-2">
			<%= f.label :created_at, class: "control-label" %>
		</div>
		<div class="col-sm-10">
			<%= f.date_select :created_at, class: "form-control"%>
		</div>
	</div>
	<div class="row row-form">
		<div class="col-sm-2">
			<%= f.label :finish, class: "control-label" %>
		</div>
		<div class="col-sm-10">
			<%= f.check_box :finish%>
		</div>
	</div>
	<div class="row row-form">
		<div class="col-sm-offset-2 col-sm-10">
			<%= f.submit :Submit, class: "btn btn-default" %>
		</div>
	</div>
<% end %>