<div class="panel panel-info">
	<div class="panel-heading">
		<h1>Status Options</h1>
		<a><%= link_to 'New Status Option', new_status_option_path %></a>
	</div>	
	<div class="panel-body">
		
		<table class="table table-striped table-hover">
			<thead>
				<tr>
					<th>Name</th>
					<th>Date</th>
					<th>Action</th>
				</tr>
			</thead>
			<tbody>
				<% @status_options.each do |status_option| %>
				<tr>
					<td><%= status_option.name %></td>
					<td><%= status_option.created_at.strftime("%Y-%m-%d") %></td>
					<td>
						<%= link_to 'Edit', edit_status_option_path(status_option) %> 
						<%= link_to 'Show', status_option_path(status_option) %> 
						<%= link_to 'Delete', status_option_path(status_option), method: :delete, data: {confirm: 'Are you sure ?'} %>
					</td>
				</tr>
				<% end %>
			</tbody>
		</table>

		<p><%= paginate @status_options %></p>
	</div>
</div>
