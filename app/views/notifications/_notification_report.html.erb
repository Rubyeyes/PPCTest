<div class="panel panel-warning">
	<div class="panel-heading">
		<h1>Report Notification</h1>
		<p>
			<%= User.find(object.sender_id).fullname%> 
			<%= object.content%>
			<%= object.notifiable.project.project_name if  object.notifiable.present?%>
		</p>
	</div>
	<div class="panel-body">
		<h3><%= object.notifiable.name %></h3>
		<p><b>Project: </b><%= link_to object.notifiable.project.project_name, controller: "reports", action: "show", id: object.notifiable.id  %></p>
		<em><%= object.notifiable.project.user.fullname if current_user.role != 'factory' %></em>
		<p><%= simple_format(object.notifiable.content) %></p>
	</div>
</div>