<div class="panel panel-default">
	<div class="panel-heading">
		<div class="row">
			<div class="col-sm-11"><div class="project-show-table-head">Reports</div></div>
			<div class="col-sm-1">
				<% if current_user.role == 'admin' %>
					<%= link_to "", new_report_path(project_id_param: @project.id), class: "glyphicon glyphicon-plus"%>
				<% end %>
			</div>
		</div>
	</div>

	<div class="panel-body panel-home-show">
		<% if object.reports.present? %>
			<table class="table table-striped table-condensed">
				<thead>
					<tr>
						<th>Date</th>
						<th>Content</th>
						<th><%= "#{"Action" if current_user.role == 'admin'}" %></th>
					</tr>
				</thead>
				<tbody>
					<% object.reports.order(created_at: :desc).last(3).each do |report| %>
						<tr>
							<td><%= report.created_at.strftime("%d %b. %y") %></td>
							<td><%= truncate(report.content, length: 60, separate: '') %></td>
							<% if current_user.role == 'admin' %>	
								<td>
									<%= link_to 'Edit |', edit_report_url(report) %>
									<%= link_to 'Delete', report_url(report), method: :delete, data: {confirm: "Are you sure?"} %>
								</td>
							<% end %>			
						</tr>
					<% end %>						
				</tbody>
			</table>
		<% end %>
	</div>
	<div class="panel-footer text-right">
		<% if object.reports.count > 3 %>
			<%= link_to 'All', reports_path(project_id_param: object.id)%>
		<% end %>
	</div>
</div>

