

<div class="panel panel-default panel-border-transparent">
  <div class="panel-body">
	  <% if current_user.role != "factory" %>
	    <%= form_tag(projects_path, method: :get) do %>
		    <div class="form-inline">
					<%= select_tag(:filter, options_for_select(User.where("role LIKE ? or role LIKE ?", "factory", "admin").map { |user| [user.fullname] }), prompt: "Select Facotory", class: "form-control") %>
					<%= submit_tag 'Submit', class: "btn btn-default"%>
				</div>
			<% end %>
		<% end %>
  </div>
</div>

<% @projects.each_slice(3) do |group| %>
	<div class="row">
		<% group.each do |project| %>
			<div class="col-xs-12 col-sm-6 col-md-4">
				<div class="panel panel-info">
					<div class="panel-body panel-body-cost">
							<div class="<%= body_top_color project %>">
								<%= link_to image_tag(project.image.url(:detail).to_s, class: "img-responsive img-thumbnail project-image"), project_path(project) %>
								<div class="panel panel-project-heading">
									<h3 class="h3-project-name"><%= link_to  truncate(project.project_name, length: 60, separate: ''), project_path(project), class: "project-heading-word" %></h3>
									<em class="factory-name"><%= project.user.fullname%></em>
								</div>
								<% if project.costs.present? %>
										<ul class="list-group list-group-cost-index">
											<li class="list-group-item list-item-project-cost-index"><%= number_to_currency(project.costs.last.unitUSD)%></li>
											<li class="list-group-item list-item-project-cost-index"><%= number_to_currency(project.costs.last.toolingUSD) %></li>
										</ul>
								<% end %>
							</div>
					</div> <!-- panel-body -->

					<div class="panel-footer">
						<div class="row">
							<div class="col-xs-12">
								
								<% if project.problem.present? %>
									<p class="<%= problem_word project.status %>">
										<%= project.problem %>		
									</p>
								<% end %>
								<p>
									<% if project.tasks.present? %>			
										<b><%= project.tasks.last.executor %></b> -
										<%= project.tasks.last.task %>
									<% end %>		
								</p>
								<p>
									<% if project.samples.present? %>
										Sample will be received around: 			
										<b><%= project.samples.last.receive_date.strftime("%b %d. %y") %></b>
									<% end %>		
								</p>
							</div>
						</div>
						<%= render "products_index_table", object: project %>
					</div> <!-- panel-footer -->
				</div> <!-- panel-group -->
			</div> <!-- col-md-4 -->
		<% end %> <!-- group iterate -->
	</div> <!-- row div -->
<% end %>


<p><%= paginate @projects %></p>
