<h1>Projects#index</h1>

<p><%= link_to 'New Project', new_project_path %></p>

<table class="table table-bordered table-hover">
	<thead>
		<tr>
			<th>project name</th>
			<th>start date</th>
			<% if current_user.role == "admin" %>
				<th>actions</th>
			<% end %>
		</tr>
	</thead>
	<tbody>
		<% @projects.each do |project| %>
			<tr>
				<td><%= truncate(project.project_name, length: 60, separate: '') %></td>
				<td><%= project.created_at.strftime("%Y-%m-%d") %></td>
				<% if current_user.role == "admin" %>
					<td>
						<%= link_to 'Edit', edit_project_path(project) %> |
						<%= link_to 'Delete', project_path(project), method: :delete, data: {confirm: 'Are you sure ?'} %>
					</td>
				<% end %>
			</tr>
		<% end %>
	</tbody>
</table>

<p><%= paginate @projects %></p>
