<% if current_user.role == 'Admin' %>
	<%= link_to 'New Purchase Order', new_po_path(project_id_param: object.id), class: "pull-xs-right" %>
<% end %>

<table class="table table-striped table-condensed">
	<thead>
		<tr>
			<th>PO Number</th>
			<th>Date</th>
			<th>Action</th>
		</tr>
	</thead>
	<tbody>
		<% if object.pos.present? %>
			<% object.pos.last(3).each do |po| %>
				<tr>
					<td><%= po.po_number %></td>
					<td><%= po.date.strftime("%d-%m-%y") %></td>
					<td>
						<%= link_to 'View', po_url(po) %> |
						<%= link_to 'Edit', new_po_product_url(po_id: po.id) if current_user.role == 'admin'%> |
						<%= link_to 'Delete', po_url(po), method: :delete, data: {confirm: "Are you sure?"} if current_user.role == 'admin'%>
					</td>
				</tr>
			<% end %>
		<% end %>
	</tbody>
</table>

