
<div class="container-project-show ">
	<div class="col-xs-12 col-md-12" style="padding:0px"> 
		<div class="image-project-frame"><%= image_tag @project.image.url(:detail).to_s, class: "img-responsive" %></p>
	</div>

	<div class="show-project-background">
	<div class="container">
		<div class="container-content">
			<div class="row">
				<div class="col-xs-12 col-md-4">
					<div class="panel panel-default panel-project-title">
						<div class="panel-heading">
							<h3><%= @project.project_name %></h3>
							<em><%= @project.user.fullname%></em>
						</div>
						<div class="panel-body">
							<p><%= @project.description %></p>
							
							<% if @project.patent_number.present?%>
									<p>Patent Number: <b><%= @project.patent_number %></b></p>
							<%end%>
						</div>
						<% if current_user.role == 'admin' %>
						<div class="panel-footer text-right">
							<%= link_to 'Edit', edit_project_path(@project) %>
							<%= link_to 'Delete', project_path(@project), method: :delete, data: {confirm: "Are you sure?"} if current_user.role == 'admin' %>
						</div>
						<% end %>
					</div>
					<% if @project.status == "0. Need to be fixed" %>
						<div class="panel panel-danger">
							<div class="panel-heading">
								<%= @project.problem %>
							</div>
						</div>
					<%end%>
					<div class="panel panel-default">
						<ul class="list-group">
							<li class="list-group-item" style="text-align:right"><%= link_to "Upload Instruction", new_instruction_path(project_id_param: @project.id)%></li>
							<% if @project.instructions.present? %>
								<% @project.instructions.each do |i|%>
									<li class="list-group-item">
										<b><%= link_to i.description, "https://docs.google.com/viewer?url=#{i.instruction.url}" %></b>
										<%= link_to 'Delete', instruction_url(i), method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-default btn-xs", style: "float:right"%>
										<%= link_to 'Edit', edit_instruction_url(i), class: "btn btn-default btn-xs", style: "float:right;padding-right:5px;"%>
										<%= link_to 'Download', i.instruction.url, class: "btn btn-default btn-xs", style: "float:right;padding-right:5px;"%>
									</li>
								<% end %>
							</ul>
						<%end%>
					</div>

				</div>
				<div class="col-xs-12 col-md-8">
					<%= render "costs_table", object: @project, :number => 3 %>
					<%= render "show_table_samples", object: @project %>
					<%= render "show_table_tasks", object: @project %><br>
					<%= render "show_table_reports", object: @project %><br>
				</div>
			</div>

				
			<div class="row">
				<div class="col-xs-12">
					<%= render "show_table_products", object: @project %>
				</div>
			</div>
		</div>
	</div>
	</div>

</div>
			

