<% if object.products.present? %>
		<table class="table table-condensed">
			<tbody>
				<% object.products.each do |product| %>
					<tr>
						<td><%= product.item_number %></td>
						<td><%= number_to_currency(product.cost.unitUSD) if product.cost.present?%></td>
						<td><%= number_to_currency(product.cost.toolingUSD)  if product.cost.present? %></td>
						<td class="dropdown">
							<%if product.po_products.present?%>
		            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><%="Pos"%><span class="caret"></span></a>
		            <ul class="dropdown-menu">
		            	<% product.po_products.each do |p| %>
		              	<li><%= "#{p.quantity} in #{p.po.po_number}" %></li>
		              	<li role="separator" class="divider"></li>
		              <% end %>
		            </ul>
	            <%end%> 
	          </td>
					</tr>
				<% end %>
			</tbody>
		</table>
<% end %>
	