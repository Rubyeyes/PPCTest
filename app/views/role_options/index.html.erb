<div class="container container-user">
<div class="panel panel-info">
	<div class="panel-heading">
		<h1>Role Options</h1>
		<a ><%= link_to 'New Role Option', new_role_option_path, class: "text-right" %></a>
	</div>
	<div class="panel-body">
		<table class="table table-striped table-hover">
			<thead>
				<tr>
					<th>Name</th>
					<th>Date</th>
					<th>Actions</th>
				</tr>
			</thead>
			<tbody>
				<% @role_options.each do |role_option| %>
				<tr>
					<td><%= role_option.name %></td>
					<td><%= role_option.created_at.strftime("%Y-%m-%d") %></td>
					<td>
						<%= link_to 'Edit', edit_role_option_path(id: role_option.id) %> 
						<%= link_to 'Delete', role_option_path(id: role_option.id), method: :delete, data: {confirm: 'Are you sure ?'} %>
					</td>
				</tr>
				<% end %>
			</tbody>
		</table>

		<p><%= paginate @role_options %></p>
	</div>
</div>
</div>
