<div class="container">
<div class="panel panel-default">
	<div class="panel-heading">
	<h1>Logos</h1>
	<div class="text-right"><%= link_to 'New Logo', new_logo_path %></div>
	</div>

	<div class='panel-body'>
	

	<table class="table table-striped table-hover">
		<thead>
			<tr>
				<th>Name</th>
				<th>Image</th>
				<th>Created at</th>
				<th>Actions</th>
			</tr>
		</thead>
		<tbody>
			<% @logos.each do |logo| %>
				<tr>
					<td><%= logo.name %></td>
					<td ><%= image_tag(logo.image.url(:detail).to_s, style: "height:50px")%></td>
					<td><%= logo.created_at.strftime("%Y-%m-%d") %></td>
					<td>
						<%= link_to 'Edit', edit_logo_path(logo) %> |
						<%= link_to 'Show', logo_path(logo) %> |
						<%= button_to 'Delete', logo_path(logo), method: :delete, data: {confirm: 'Are you sure ?'}, class: "btn btn-default" %>
					</td>
				</tr>
			<% end %>
		</tbody>
	</table>

	<p><%= paginate @logos %></p>
	</div>
</div>
</div>