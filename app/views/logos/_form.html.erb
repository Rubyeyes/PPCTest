<P><%= render "validation_errors", object:  @logo %><P>

<%= form_for @logo do |f| %>
	<div class="row">
		<div class="col-sm-2">
			<%= f.label :name,class: "control-label" %><br>
		</div>
		<div class="col-sm-10">
			<%= f.text_field :name, class: "form-control"%>
		</div>
	</div>

	<div class="row">
		<div class="col-sm-2">
			<%= f.label "Or image url",class: "control-label"   %>
		</div>
		<div class="col-sm-10">
			<%= f.text_field :remote_image_url, class: "form-control" %>
		</div>
	</div>

	<div class="row">
		<div class="col-sm-2">
			<%= f.label "Image", class: "control-label" %>
		</div>
		<div class="col-sm-10">
			<%= f.file_field :image %>
		</div>
	</div>

	<div class="row">
		<div class="col-sm-2"></div>
		<div class="col-sm-10">
			<div><%= f.submit 'Submit', class: "btn btn-default"%></div>
		</div>
	</div>
<% end %>