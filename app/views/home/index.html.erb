<div class="row">
	<%= form_tag(home_index_path, method: :get) do %>
		<%= select_tag(:filter, options_for_select(User.where("role LIKE ? or role LIKE ?", "factory", "admin").map { |user| [user.fullname] })) %>
		<%= submit_tag 'Submit' %>
	<% end %>
</div>

<% @projects.each do |project| %>
	<div class="row">
		<div class="col-xs-6 col-md-4">
			<h2><%= link_to  truncate(project.project_name, length: 60, separate: ''), home_path(project) %></h2>
		</div>
	</div>
	<div class="row">
		<div class="col-xs-6 col-md-4">
			<%= link_to image_tag(project.image.url(:index).to_s, class: "img-responsive img-thumbnail"), home_path(project) %>
		</div>
		<div class="col-xs-12 col-md-8">

			<em><%= project.user.fullname%></em>
			<p><%= project.status%></p>
			<p>
				<% if project.tasks.present? %>
					<b>Task : </b>			
					<%= project.tasks.last.executor %> -
					<%= project.tasks.last.task %>
				<% end %>		
			</p>

			<p>
				<% if project.samples.present? %>
					Sample will be received around: 			
					<b><%= project.samples.last.receive_date.strftime("%b %d. %y") %></b>
				<% end %>		
			</p>

			<%= render "costs_table", object: project, :number => 2 %>

			<%= render "products_index_list", object: project %>

		</div>
	</div>
	<hr>
<% end %>


<p><%= paginate @projects %></p>
