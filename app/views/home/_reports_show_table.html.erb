<% if current_user.role != 'user' %>
	<%= link_to 'New Report', new_report_path(project_id_param: object.id), class: "pull-xs-right" %>
<% end %>

<% if object.reports.present? %>
	<table class="table table-striped table-condensed">
		<thead>
			<tr>
				<th>Created at</th>
				<th>Name</th>
				<th>Content</th>
				<% if current_user.role != 'user' %>
					<th>Action</th>
				<% end %>
			</tr>
		</thead>
		<tbody>
			<% object.reports.last(3).each do |report| %>
				<tr>
					<td><%= report.created_at.strftime("%d-%m-%y") %></td>
					<td align = 'center'><%= report.name %></td>
					<td><%= report.content %></td>
					<% if current_user.role == 'admin' %>	
						<td>
							<%= link_to 'Edit |', edit_report_url(report) %>
							<%= link_to 'Delete', report_url(report), method: :delete, data: {confirm: "Are you sure?"} %>
						</td>
					<% end %>			
				</tr>
			<% end %>						
		</tbody>
	</table>
<% end %>


<% if object.samples.count > 3 %>
	<%= link_to 'All', reports_path(project_id_param: object.id), class: "pull-xs-right" %>
<% end %>
