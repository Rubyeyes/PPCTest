<P><%= render "validation_errors", object:  @user %><P>

<%= form_for @user, :url => users_admin_path do |f| %>
	<div class="row row-form">
		<div class="col-sm-2">
			<%= f.label :fullname, class: "control-label" %>
		</div>
		<div class="col-sm-10">
			<%= f.text_field :fullname, class: "form-control"%>
		</div>
	</div>

	<div class="row row-form">
		<div class="col-sm-2">
			<%= f.label :email, class: "control-label" %>
		</div>
		<div class="col-sm-10">
			<%= f.text_field :email, class: "form-control"%>
		</div>
	</div>

	<div class="row row-form">
		<div class="col-sm-2">
			<%= f.label :role, class: "control-label" %>
		</div>
		<div class="col-sm-10">
			<%= f.select :role, RoleOption.all.collect {|r| [r.name]}, {prompt: "Select role"}, class: "form-control"%>
		</div>
	</div>

	<div class="row row-form">
		<div class="col-sm-offset-2 col-sm-10">
			<%= f.submit :Submit, class: "btn btn-default" %>
		</div>
	</div>
<% end %>