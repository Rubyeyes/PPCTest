<h1>Users#edit</h1>

<P><%= render "validation_errors", object:  @user %><P>

<%= form_for @user, :url => users_admin_path do |f| %>

	<p>
		<%= f.label :fullname %><br>
		<%= f.text_field :fullname %>
	</p>

	<p>
		<%= f.label :email %><br>
		<%= f.text_field :email %>
	</p>

	<p>
		<%= f.label :role %><br>
		<%= f.select :role, RoleOption.all.collect {|r| [r.name]}, {prompt: "Select role"} %>
	</p>

	<P><%= f.submit %></P>
<% end %>
