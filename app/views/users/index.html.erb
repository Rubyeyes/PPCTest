<div class="panel panel-info">
	<div class="panel-heading">
		<h1>Users</h1>
	</div>
	<div class="panel-body">
		<table class="table table-striped table-hover">
			<thead>
				<tr>
					<th>Username</th>
					<th>Email</th>
					<th>Role</th>
					<th>Actions</th>
				</tr>
			</thead>
			<tbody>
				<% @users.each do |user| %>
				<tr>
					<td><%= user.fullname %></td>
					<td><%= user.email %></td>
					<td><%= user.role %></td>
					<td>
						<%= link_to 'Edit', edit_users_admin_path(user) %> |
						<%= link_to 'Delete', users_admin_path(user), method: :delete, data: {confirm: 'Are you sure ?'} %>
					</td>
				</tr>
				<% end %>
			</tbody>
		</table>

		<p><%= paginate @users %></p>
	</div>
</div>
