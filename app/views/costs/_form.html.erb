<P><%= render "validation_errors", object:  @cost%><P>

<%= form_for @cost do |f| %>

	<% if @project.present? %>
		<%= f.hidden_field :project_id, :value => @project.id %>
	<% else %>
		<%= f.select :project_id, Project.where(user_id: current_user.id).collect {|t| [t.project_name, t.id]}, {prompt: "Select Project"} %>
	<% end %>
	
	<p>
		<%= f.label :unitRMB, "Unit RMB" %><br>
		<%= f.text_field :unitRMB %>
	</p>

	<p>
		<%= f.label :toolingRMB, "Tooling RMB" %><br>
		<%= f.text_field :toolingRMB %>
	</p>

	<p>
		<%= f.label :unitUSD, "Unit USD" %><br>
		<%= f.text_field :unitUSD %>
	</p>

	<p>
		<%= f.label :toolingUSD, "Tooling USD" %><br>
		<%= f.text_field :toolingUSD %>
	</p>

	<p>
		<%= f.label :ratio, "Currency Ratio" %><br>
		<%= f.text_field :ratio %>
	</p>

	<p>
		<%= f.label :description %><br>
		<%= f.text_area :description, size: "40X20" %>
	</p>
			
	<P><%= f.submit %></P>
<% end %>