<P><%= render "validation_errors", object:  @po%><P>

<%= smart_form(@po, params[:controller]) do |f| %>
	<div class="row row-form">
		<div class="col-sm-2">
			<%= f.label :po_number, class: "control-label" %>
		</div>
		<div class="col-sm-10">
			<%= f.text_field :po_number, class: "form-control" %>
		</div>
	</div>

	<div class="row row-form">
		<div class="col-sm-2">
			<%= f.label :date, class: "control-label" %>
		</div>
		<div class="col-sm-10">
			<%= f.date_select :date, order: [:month, :day, :year], class: "form-control" %>
		</div>
	</div>
	<div class="row row-form">
		<div class="col-sm-offset-2 col-sm-10">
			<%= f.submit "Add Product to PO", class: "btn btn-default"  if action_name == 'new' %>
			<%= f.submit :submit , class: "btn btn-default" if action_name == 'edit'%>
		</div>
	</div>		

<% end %>