<div class="panel panel-default panel-border-transparent">
	<div class="panel-body">
	</div>
</div>

<h1>Purchase Orders</h1>

<div class="panel panel-default panel-border-transparent">
	<div class="panel-body text-right">
		<%= link_to "New PO", new_po_path if current_user.role == 'admin' %>
	</div>
</div>


<table class="table table-striped table-hover">
	<thead>
		<tr>
			<th><%= sortable "po_number", "PO Number" %></th>
			<th><%= sortable "date", "Date" %></th>
			<th>Action</th>
		</tr>
	</thead>
	<tbody>
		<% @pos.each do |po| %>
			<tr>
				<td><%= po.po_number %></td>
				<td><%= po.date.strftime("%d-%m-%y") %></td>
				<td>
					<%= link_to 'View', po_url(po) %>
					<%= link_to '| Edit', new_po_product_url(po_id: po.id) if current_user.role == 'admin'%>
					<%= link_to '| Delete', po_url(po), method: :delete, data: {confirm: "Are you sure?"} if current_user.role == 'admin'%>
				</td>
			</tr>
		<% end %>
	</tbody>
</table>
