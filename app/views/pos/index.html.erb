<div class="container">

<h1>Purchase Orders</h1>

<div class="text-right">
	<%= link_to "New PO", new_po_path if current_user.role == 'admin' || 'user' %>
</div>
<hr class="hr-table">

<div class="table-responsive">
<table class="table table-striped table-hover">
	<thead>
		<tr>
			<th><%= sortable "po_number", "PO Number"%></th>
			<th><%= sortable "date", "Date" %></th>
			<% if current_user.role == 'admin' %>
				<th>Action</th>
			<% end %>
		</tr>
	</thead>
	<tbody>
		<% @pos.each do |po| %>
			<tr>
				<td><%= link_to po.po_number,  po_url(po) %></td>
				<td><%= po.date.strftime("%d-%m-%y") %></td>
				<td>
					<%= link_to 'Edit', new_po_product_url(po_id: po.id) if current_user.role == 'admin'%>
					<%= link_to 'Delete', po_url(po), method: :delete, data: {confirm: "Are you sure?"} if current_user.role == 'admin'%>
				</td>
			</tr>
		<% end %>
	</tbody>
</table>
</div>

</div>
