<P><%= render "validation_errors", object: @product %><P>

<%= form_for @product do |f| %>

	<% if action_name == "new"%>
		<% if @project.present? %>
			<%= f.hidden_field :project_id, :value => @project.id %>
		<% else %>
			<%= f.select :project_id, Project.where(user_id: current_user.id).collect {|t| [t.project_name, t.id]}, {prompt: "Select Project"} %>
		<% end %>
	<% end %>

	<p>
		<%= f.label :product_name %><br>
		<%= f.text_field :product_name %>
	</p>

	<p>
		<%= f.label :item_number %><br>
		<%= f.text_field :item_number %>
	</p>

	<p>
		<%= f.label :Package, "Package Requirement" %><br>
		<%= f.text_area :Package, size: "40X20" %>
	</p>

	<p>
		<%= f.label :Mark, "Mark Requirement" %><br>
		<%= f.text_area :Mark, size: "40X20" %>
	</p>

	<p>
		<%= f.label :Instruction, "Instruction Requirement" %><br>
		<%= f.text_area :Instruction, size: "40X20" %>
	</p>

	<p>
		<%= f.label :reminder %><br>
		<%= f.text_area :reminder, size: "40X20" %>
	</p>

	<p>
		<%= f.select :cost_id, Cost.where(project_id: @product.project_id).collect {|t| [t.unitRMB, t.id]}, {prompt: "Select Product"} %>
	</p>

	<P><%= f.submit %></P>
<% end %>