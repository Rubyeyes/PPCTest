<P><%= render "validation_errors", object: @product %><P>

<%= smart_form(@product, params[:controller]) do |f| %>
	<!-- Check if requiring to offer project select -->
	<% if action_name == "new" %>
		<% if @project.present? %>
			<%= f.hidden_field :project_id, :value => @project.id %>
		<% else %>
			<div class="row row-form">
				<div class="col-sm-2">
					<%= f.label :project_id, "Project Name", class: "control-label" %>
				</div>
				<div class="col-sm-10">		
					<%= f.select :project_id, Project.where(user_id: current_user.id).collect {|t| [t.project_name, t.id]}, {prompt: "Select Project"}, class: "form-control"%>
				</div>
			</div>
		<% end %>
	<% end %>

	<div class="row row-form">
		<div class="col-sm-2">
			<%= f.label :product_name, class: "control-label" %>
		</div>
		<div class="col-sm-10">
			<%= f.text_field :product_name, class: "form-control" %>
		</div>
	</div>

	<div class="row row-form">
		<div class="col-sm-2">
		<%= f.label :item_number, class: "control-label" %>
		</div>
		<div class="col-sm-10">
		<%= f.text_field :item_number, class: "form-control" %>
	</div>
	</div>

	<div class="row row-form">
		<div class="col-sm-2">
		<%= f.label :Package, "Package Requirement", class: "control-label" %>
		</div>
		<div class="col-sm-10">
		<%= f.text_area :Package, size: "40X20", class: "form-control" %>
	</div>
	</div>

	<div class="row row-form">
		<div class="col-sm-2">
		<%= f.label :Mark, "Mark Requirement", class: "control-label" %>
		</div>
		<div class="col-sm-10">
		<%= f.text_area :Mark, size: "40X20", class: "form-control" %>
	</div>
	</div>

	<div class="row row-form">
		<div class="col-sm-2">
		<%= f.label :Instruction, "Instruction Requirement", class: "control-label" %>
		</div>
		<div class="col-sm-10">
		<%= f.text_area :Instruction, size: "40X20", class: "form-control" %>
	</div>
	</div>

	<div class="row row-form">
		<div class="col-sm-2">
		<%= f.label :reminder , class: "control-label"%>
		</div>
		<div class="col-sm-10">
		<%= f.text_area :reminder, size: "40X20", class: "form-control" %>
	</div>
	</div>

	<div class="row row-form">
		<div class="col-sm-2">
			<%= f.label 'Cost' , class: "control-label"%>
		</div>
		<div class="col-sm-10">
			<%= f.select :cost_id, Cost.where(project_id: @product.project_id).collect {|t| [number_to_currency(t.unitUSD), t.id]}, {prompt: "Select Cost"} , class: "form-control"%>
		</div>
	</div>

	<div class="row row-form">
		<div class="col-sm-2">
			<%= f.label "Logo Image", class: "control-label" %>
		</div>
		<div class="col-sm-10">
			<%= f.file_field :logo_image, class: "btn" %>
		</div>
	</div>

	<div class="row row-form">
		<div class="col-sm-2">
			<%= f.label "Or image url",class: "control-label"   %>
		</div>
		<div class="col-sm-10">
			<%= f.text_field :remote_logo_image_url, class: "form-control" %>
		</div>
	</div>	

	<div class="row row-form">
		<div class="col-sm-2">
			<%= f.label "Patent Image", class: "control-label" %>
		</div>
		<div class="col-sm-10">
			<%= f.file_field :patent_image, class: "btn" %>
		</div>
	</div>

	<div class="row row-form">
		<div class="col-sm-2">
			<%= f.label "Or image url",class: "control-label"   %>
		</div>
		<div class="col-sm-10">
			<%= f.text_field :remote_patent_image_url, class: "form-control" %>
		</div>
	</div>	

	<div class="row row-form">
		<div class="col-sm-2">
			<%= f.label "MIC Image", class: "control-label" %>
		</div>
		<div class="col-sm-10">
			<%= f.file_field :made_image, class: "btn" %>
		</div>
	</div>

	<div class="row row-form">
		<div class="col-sm-2">
			<%= f.label "Or image url",class: "control-label"   %>
		</div>
		<div class="col-sm-10">
			<%= f.text_field :remote_made_image_url, class: "form-control" %>
		</div>
	</div>	

	<div class="row row-form">
		<div class="col-sm-offset-2 col-sm-10">
			<%= f.submit :Submit, class: "btn btn-default" %>
		</div>
	</div>

<% end %>