
<div class="panel panel-default panel-top-margin">

	<div class="panel-heading">	
				<h1><%= @product.item_number%></h1>
				<em><%= @product.product_name %></em>
				<p>Belong to Project: <b><%= link_to @product.project.project_name, controller: "projects", action: "show", id: @product.project_id %></b></p>
	</div>

	<div class="panel-body panel-home-show">
		<div class="row">
			<div class="col-ex-12 col-md-8">
				<table class="table table-striped table-condensed" >
					<tr>
						<th>Final Unit Cost: </th>
						<td><%= number_to_currency(@product.cost.unitUSD) if @product.cost.present? %></td>
					</tr>
					<tr>
						<th>Final Tooling Fee: </th>
						<td><%= number_to_currency(@product.cost.toolingUSD) if @product.cost.present? %></td>
					</tr>
					<tr>
						<th>Package Requirement: </th>
						<td><%= @product.Package %></td>
					</tr>
					<tr>
						<th>Mark Requirement: </th>
						<td><%= @product.Mark %></td>
					</tr>
					<tr>
						<th>Instruction Requirement: </th>
						<td><%= @product.Instruction %></td>
					</tr>
					<tr>
						<th>Reminder: </th>
						<td><%= @product.reminder %></td>
					</tr>
				</table>
			</div>
			<div class="col-ex-12 col-md-4">
				<table class="table table-striped table-hover">
					<thead>
						<tr>
							<th>PO number</th>
							<th>Quantity</th>
							<th>Created at</th>
						</tr>
					</thead>
					<tbody>
						<% @product.po_products.joins(:po).order("date DESC").each do |po_product| %>
							<tr>
								<td><%= link_to po_product.po.po_number, controller: 'pos', action: 'show', id: po_product.po.id %></td>
								<td><%= po_product.quantity %></td>
								<td><%= po_product.po.date.strftime("%d-%m-%y") %></td>	
							</tr>
						<% end %>						
					</tbody>
				</table>
			</div>
		</div>
	</div>


	<div class="panel-footer text-right">
		<% if current_user.role == 'admin' %>
			<%= link_to 'Edit', edit_product_path(@product) %> |
			<%= link_to 'Delete', product_path(@product), method: :delete, data: {confirm: "Are you sure?"} %>
		<% end %>
	</div>

</div>


<div class="col-ex-12 col-md-6">
	<div class="panel panel-info">
		<div class="panel-body panel-body-cost">
			<%= image_tag(@product.logo_image.url(:detail).to_s, class: "img-responsive img-thumbnail project-image") %>
		</div>
	</div>
</div>
<div class="col-ex-12 col-md-6">
	<div class="panel panel-info">
		<div class="panel-body panel-body-cost">
			<%= image_tag(@product.patent_image.url(:detail).to_s, class: "img-responsive img-thumbnail project-image") %>
		</div>
	</div>
</div>
<div class="col-ex-12 col-md-6">
	<div class="panel panel-info">
		<div class="panel-body panel-body-cost">
			<%= image_tag(@product.made_image.url(:detail).to_s, class: "img-responsive img-thumbnail project-image") %>
		</div>
	</div>
</div>



