<!DOCTYPE html>
<html lang="en">
<head>
  <title>PPCTest2</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<% if flash[:notice] %>
  <div class="alert alert-success">
    <div  class = "text-center"><%= flash[:notice] %></div>
  </div>
<% elsif flash[:alert] %>
  <div id="notice_wrapper">
    <p class="alert alert-danger"><%= flash[:alert] %></p>
  </div>
<% end %>

<!-- Navigation Bar -->
<nav class="navbar-full navbar-inverse">
  <div class="container-fluid">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%= link_to image_tag(@logo.image.url(:logo).to_s), home_index_path, class: "navbar-brand" if @logo.present? %>
      <%= link_to "NcSTAR", home_index_path, class: "navbar-brand" if @logo.nil? %>
    </div>

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <% if current_user %>
        <ul class="nav navbar-nav">
          <form class="navbar-form navbar-left" role="search">
            <div class="form-group">
              <%= form_tag home_index_path, method: :get do %>
                <%= text_field_tag :query, params[:query], class: "form-control" %> 
                <%= submit_tag "Search" , name: nil, class: 'btn btn-default' %>
              <% end %>
            </div>
          </form>
        </ul>
        
        <ul class="nav navbar-nav navbar-right">  
          <li class="<%= 'active' if params[:controller] == 'costs' %>"><%= link_to "Costs", costs_path, class: "nav-link" %></li>
          <li class="<%= 'active' if params[:controller] == 'pos'%>"><%= link_to "PO", pos_path, class: "nav-link" %></li>
          <li class="<%= 'active' if params[:controller] == 'reports'%>"><%= link_to "Reports", reports_path, class: "nav-link" %></li>
          <li class="<%= 'active' if params[:controller] == 'samples'%>"><%= link_to "Samples", samples_path, class: "nav-link" %></li>
          <li class="<%= 'active' if params[:controller] == 'notificatons'%>"><%= link_to "Notification", notifications_path, class: "nav-link" %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><%= "Hello, #{@user.fullname}"%><span class="caret"></span></a>
            <ul class="dropdown-menu">
              <li><%= link_to "My Account", current_user_index_path, class: "nav-link" %></li>
              <li><%= link_to "Admin Setting", admin_setting_index_path, class: "nav-link" if current_user.role == "admin"%></li>
              <li role="separator" class="divider"></li>
              <li><%= link_to "Sign Out", destroy_user_session_path, method: :delete, class: "nav-link" %></li>
            </ul> 
          </li>
        </ul>
      <% else %>
        <ul class="nav navbar-nav navbar-right"> 
          <li><%= link_to "Sign in", new_user_session_path, class: "nav-link" %></li>
        </ul>
      <% end %>
    </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->
</nav>

<div class="container"> 

  <!-- Main body -->
  <div class="main">
    <%= yield %> 
  </div> 

  <!-- Footer -->
  <footer class="footer">
      <p>&copy; NcSTAR 2016</p>
    </footer>
</div>



<script>
  $(document).ready(function() {
    setTimeout(function() {
      $("#notice_wrapper").fadeOut('slow', function() {
        $(this).remove();
      })
    }, 4500);
  });
</script>


</body>
</html>
