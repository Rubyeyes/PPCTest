<!DOCTYPE html>
<html>
<head>
  <title>PPCTest2</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<% if flash[:notice] %>
  <div id="notice_wrapper">
    <p class="notice"><%= flash[:notice] %></p>
  </div>
<% elsif flash[:alert] %>
  <div id="notice_wrapper">
    <p class="alert"><%= flash[:alert] %></p>
  </div>
<% end %>

<div id="account">
  <% if current_user %>
    <div class="home" ><%= link_to 'Home', home_index_path %></div>
    <span class="welcome">Welcome, <%= current_user.fullname if current_user.fullname.present? %></span>
    <div class="my_account"><%= link_to 'My account', current_user_index_path %></div>
    <% if current_user.role == "admin" %>
      <div class="setting"><%= link_to 'Admin setting', admin_setting_index_path %></div>
    <% end %>  
  <% else %>
    <%= link_to "Sign in", new_user_session_path %>
  <% end %>
</div>

<%= yield %>

<script>
  $(document).ready(function() {
    setTimeout(function() {
      $("#notice_wrapper").fadeOut('slow', function() {
        $(this).remove();
      })
    }, 4500);
  });
</script>

</body>
</html>
