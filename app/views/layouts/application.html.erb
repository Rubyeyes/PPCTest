<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->
  <title>NcSTAR Tactical</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  
  <%= csrf_meta_tags %>
</head>
<body>

<% if flash[:notice] %>
  <div id="notice_wrapper">
    <div  class = "alert alert-success"><%= flash[:notice] %></div>
  </div>
<% elsif flash[:alert] %>
  <div id="notice_wrapper">
    <p class="alert alert-danger"><%= flash[:alert] %></p>
  </div>
<% end %>

<!-- Navigation Bar -->
<div class="navbar-fixed-top">
  <div class="<%= smart_navbar_color params[:controller]%>">
    <div class="container-fluid">
      <div class="navbar-header">
        <!-- Brand and toggle get grouped for better mobile display -->
        <button type="button" class="navbar-toggle " data-toggle="collapse" data-target="#navbar" aria-expanded="false">
          <span class="sr-only">Toggle navigation</span>
          <span class="glyphicon glyphicon-align-justify glyphicon-white"></span>
        </button>
        <%= link_to image_tag(@logo.image.url(:detail).to_s, class: "logo"), home_index_path, class: "navbar-brand" if @logo.present? %>
        <%= link_to "NcSTAR", home_index_path, class: "navbar-brand" if @logo.nil? %>
      </div>

      <!-- Collect the nav links, forms, and other content for toggling -->
      <div  id="navbar" class="navbar-collapse collapse" aria-expanded="false">
        <% if current_user %>
          <ul class="nav navbar-nav">
            <% if params[:controller] != "home"%>
              <form class="navbar-form navbar-left" role="search">
                <div class="form-group">
                  <%= form_tag(pos_path, method: :get) do %>
                    <%= text_field_tag :query, params[:query], class: "form-control" %> 
                </div>
                    <button type="submit" class="btn btn-default">
                      <span class="glyphicon glyphicon-search" aria-hidden="true"></span>
                    </button>
                  <% end %>
              </form>
            <%end%>
          </ul>
          <ul class="nav navbar-nav navbar-right">
            <li class="<%= 'active' if params[:controller] == 'notificatons'%>">
              <a class="nav-link" href="/notifications">
              <span class="glyphicon glyphicon-envelope" aria-hidden="true"></span>
              <span class="badge badge-color"><%=@notifications.where(read: false).count if @notifications.where(read: false).count > 0 %></span>
              </a>
            </li>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle navbar-toggle-width" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><%= "Hello, #{@user.fullname}"%><span class="caret"></span></a>
              <ul class="dropdown-menu dropdown-menu-inverse">
                <li><%= link_to "My Account", current_user_index_path, class: "nav-link dropdown-item-color" %></li>
                <li><%= link_to "Admin Setting", admin_setting_index_path, class: "nav-link dropdown-item-color" if current_user.role == "admin"%></li>
                <li role="separator" class="divider"></li>
                <li><%= link_to "Sign Out", destroy_user_session_path, method: :delete, class: "nav-link dropdown-item-color" %></li>
              </ul> 
            </li>
          </ul>
        <% else %>
          <ul class="nav navbar-nav navbar-right"> 
            <li><%= link_to "Sign in", new_user_session_path, class: "nav-link" %></li>
          </ul>
        <% end %>
      </div><!-- /.navbar-collapse -->
    </div><!-- /.container-fluid -->
  </div>
  <% if current_user %>
    <% if params[:controller] != "home" %>
      <div class="nav-full nav-second">
        <div class="container">
          <div class="navbar-header">
            <!-- Brand and toggle get grouped for better mobile display -->
            <button type="button" class="navbar-toggle " data-toggle="collapse" data-target="#navbar-second" aria-expanded="false">
              <span class="sr-only">Toggle navigation</span>
              <span class="glyphicon glyphicon-th-large"></span>
            </button>
          </div>
          <div  id="navbar-second" class="navbar-collapse collapse" aria-expanded="false">
            <ul class="nav navbar-default nav-tabs nav-justified nav-second">
              <li class="<%= 'active' if params[:controller] == 'projects' %>"><%= link_to "Projects", projects_path, class: "nav-link nav-second-word" %></li>  
              <li class="<%= 'active' if params[:controller] == 'products' %>"><%= link_to "Products", products_path, class: "nav-link nav-second-word" %></li> 
              <li class="<%= 'active' if params[:controller] == 'costs' %>"><%= link_to "Costs", costs_path, class: "nav-link nav-second-word" %></li>
              <li class="<%= 'active' if params[:controller] == 'pos'%>"><%= link_to "PO", pos_path, class: "nav-link  nav-second-word" %></li>
              <li class="<%= 'active' if params[:controller] == 'reports'%>"><%= link_to "Reports", reports_path, class: "nav-link nav-second-word" %></li>
              <li class="<%= 'active' if params[:controller] == 'samples'%>"><%= link_to "Samples", samples_path, class: "nav-link nav-second-word" %></li>
            </ul>
          </div>
        </div>
      </div>
    <% end %>
  <% end %>
</div>
  
  <!-- Main body -->
  <div class="container container-body">
    <%= yield %>
    <!-- Footer -->
    <footer class="footer">
        <p>&copy; NcSTAR 2016</p>
    </footer> 
  </div> 

  



<script>
  $(document).ready(function() {
    setTimeout(function() {
      $("#notice_wrapper").fadeOut('slow', function() {
        $(this).remove();
      })
    }, 2500);
  });
</script>


</body>
</html>
