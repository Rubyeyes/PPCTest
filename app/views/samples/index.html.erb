

    <%= form_tag(samples_path, method: :get) do %>
    	<%= hidden_field_tag :direction, params[:direction]%>
    	<%= hidden_field_tag :sort, params[:sort]%>
	    <div class="form-inline">
		    <% if current_user.role != "factory"%>
				<%= select_tag(:filter, options_for_select(User.all.order(fullname: :asc).map { |u| [u.fullname, u.id] }), prompt: "Select Factory", class: "form-control") %>
				<%= submit_tag 'Submit', class: "btn btn-default"%>
			<% end %>
		</div>
	<% end %>


	<h1>Samples</h1>
	<h3><%= link_to @project.project_name, project_path(@project) if @project.present? %> </h3>
	<div class="text-right">
		<%= link_to "New Sample", new_sample_path if current_user.role != 'user'%>
	</div>
	<%= render "samples_index_table"%>	