<P><%= render "validation_errors", object:  @report%><P>

<%= smart_form(@report, params[:controller]) do |f| %>

	<% if action_name == "new"%>
		<% if @project.present? %>
			<%= f.hidden_field :project_id, :value => @project.id %>
		<% else %>
			<div class="row row-form">
				<div class="col-sm-2">
					<%= f.label :project_id, "Project Name", class: "control-label" %>
				</div>
				<div class="col-sm-10">
					<%= f.select :project_id, Project.where(user_id: current_user.id).collect {|t| [t.project_name, t.id]}, {prompt: "Select Project"}, class: "form-control" %>
				</div>
			</div>
			
		<% end %>
	<% end %>

	<div class="row row-form">
		<div class="col-sm-2">
			<%= f.label :name, 'Title', class: "control-label" %>
		</div>
		<div class="col-sm-10">
			<%= f.text_field :name, class: "form-control"%>
		</div>
	</div>
	<div class="row row-form">
		<div class="col-sm-2">
			<%= f.label :content, class: "control-label" %>
		</div>
		<div class="col-sm-10">
			<%= f.text_area :content, size: "40x20", class: "form-control"%>
		</div>
	</div>
	<div class="row row-form">
		<div class="col-sm-2">
			<%= f.label :report, 'Attachment', class: "control-label" %>
		</div>
		<div class="col-sm-10">
			<%= f.file_field :report, class: "form-control"%>
		</div>
	</div>	
	<div class="row row-form">
		<div class="col-sm-2">
			<%= f.label :date, class: "control-label" %>
		</div>
		<div class="col-sm-10">
			<%= f.date_select :date, class: "form-control"%>
		</div>
	</div>
	<div class="row row-form">
		<div class="col-sm-offset-2 col-sm-10">
			<%= f.submit :Submit, class: "btn btn-default" %>
		</div>
	</div>
<% end %>