<P><%= render "validation_errors", object:  @video %><P>

<%= smart_form(@video, params[:controller]) do |f| %>

	<div class="row">
		<div class="col-sm-2">
			<%= f.label "Image", class: "control-label" %>
		</div>
		<div class="col-sm-10">
			<%= f.file_field :video %>
		</div>
	</div>
	<div class="row">
		<div class="col-sm-2">
			<%= f.label :description,class: "control-label" %>
		</div>
		<div class="col-sm-10">
			<%= f.text_area :description, class: "form-control"%>
		</div>
	</div>

	<div class="row">
		<div class="col-sm-2"></div>
		<div class="col-sm-10">
			<div><%= f.submit 'Submit', class: "btn btn-default"%></div>
		</div>
	</div>
<% end %>